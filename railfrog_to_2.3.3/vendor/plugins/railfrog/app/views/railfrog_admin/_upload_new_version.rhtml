<h4><%= t(:upload_new_version) %></h4>

  <%= form_tag_with_upload_progress(:action=>'store_uploaded_version')%>
    <%= hidden_field 'site_mapping', 'id' %>
    <%= hidden_field 'chunk', 'id' %>
    <p><label for="chunk_version_content"><%= t(:content) %></label><br/>
    <%= file_field :chunk_version, :tmp_file %>
    <p><label for="chunk_version_comments"><%= t(:comments) %></label><br/>
    <%= text_field 'chunk_version', 'comments'  %></p>
    <p><label for="put_live"><%= t(:put_live) %></label>
    <%= check_box_tag('put_live', '1', true) %>
    <%= submit_tag t(:upload) %>
    <%= upload_status_tag %>

  </form>



