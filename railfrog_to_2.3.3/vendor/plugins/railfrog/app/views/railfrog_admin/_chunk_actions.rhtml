<div id="tabsMenu">
<ul id="folder_tabs" class="subsection_tabs">

  <li>
    <a href="<%= @file_name %>" target="_blank"><%= t(:view) %></a>
  </li>	

  
  <li>
    <%= link_to_remote(t(:edit),
      :url => { :action => 'edit_chunk',
      :chunk_version_id => @chunk_version,
      :site_mapping_id => @site_mapping }) %>
  </li>
  <li>
    <%= link_to_remote(t(:edit_source),
      :url => { :action => 'edit_chunk',
      :chunk_version_id => @chunk_version,
      :site_mapping_id => @site_mapping,
      :source => true }) %>
  </li>
  
  <li>
    <%= link_to_remote(t(:upload_new_version),
      :url => { :action => 'upload_new_version',
      :chunk_version_id => @chunk_version,
      :mapping_id => @site_mapping}) %>
  </li>
  <li>
    <%= link_to_remote(t(:labels),
      :url => { :action => 'show_labels',
      :site_mapping_id => @site_mapping}) %>
  </li>
  <li>
    <%= link_to_remote(t(:versions),
      :url => { :action => 'show_versions',
      :chunk_id => @chunk,
      :mapping_id => @site_mapping}) %>
  </li>
  <li>
    <%= link_to_remote(t(:delete_document),
      :url => {:action => 'delete_chunk',
      :mapping_id => @site_mapping, :chunk_id => @chunk},
      :confirm =>t(:are_you_sure)) %>
  </li>
</ul>
</div>
