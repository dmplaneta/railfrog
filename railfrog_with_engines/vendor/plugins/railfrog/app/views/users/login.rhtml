<h1><%= t :login %></h1>

<% form_tag :action => 'authenticate', :controller => 'users' do %>
<p><label><%= t(:email) %>:</label><br />
<%= text_field_tag :email %>
</p>

<p><label><%= t(:password) %>:</label><br />
<%= password_field_tag :password %>
</p>

<p><%= submit_tag t(:login) %></p>
<% end %>

