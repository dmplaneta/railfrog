<h4><%= t(:upload_file) %></h4>

  <%= form_tag_with_upload_progress(:action=>'store_uploaded')%>
    <%= hidden_field_tag :parent_id, @parent_id %>
    <p><label for="chunk_description"><%= t(:document_description) %></label><br/>
    <%= text_field 'chunk', 'description'  %></p>

    <p><label for="chunk_version_content"><%= t(:content) %></label><br/>
    <%= file_field :chunk_version, :tmp_file %>
    <%= submit_tag t(:upload) %>
    <%= upload_status_tag %>

  </form>


